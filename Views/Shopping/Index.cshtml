@model IEnumerable<Hotel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    Layout = "~/Views/Shared/_LayoutShopping.cshtml";
}

<div class="container" dir="rtl">
    @foreach(var item in Model)
    {
        
   
    <div class="row mt-5">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="~/images/@item.Images" class="img-thumbnail" />
                                <p>@item.Images</p>
                        </div>
                        <div class="col-sm-9">
                            <h1 class="alert alert-success">@item.Name</h1>
                            <hr />
                            <small>@item.Address</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    }
</div>